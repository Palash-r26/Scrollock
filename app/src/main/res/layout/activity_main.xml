<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FF">

    <!-- ðŸ”¹ MAIN CONTENT AREA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- ðŸ”¹ Top Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#5B2EFF"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageButton
                android:id="@+id/menu_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_menu"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- ðŸ”¹ Scrollable Main Section -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="20dp">

                <!-- ðŸŸ© Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Scrollock"
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />

                <!-- ðŸŸ¦ Real-Time App Usage Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="16dp"
                    android:elevation="4dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center_horizontal"
                    android:clipToOutline="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's App Usage"
                        android:textSize="18sp"
                        android:textColor="#5B2EFF"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvInstagram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Instagram: --"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:paddingVertical="4dp" />

                    <TextView
                        android:id="@+id/tvYouTube"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="YouTube: --"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:paddingVertical="4dp" />

                    <TextView
                        android:id="@+id/tvWhatsApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WhatsApp: --"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:paddingVertical="4dp" />
                </LinearLayout>

                <!-- ðŸŸ¨ Enable Button -->
                <Button
                    android:id="@+id/btnEnable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Blocking Service"
                    android:backgroundTint="#5B2EFF"
                    android:textColor="@android:color/white"
                    android:padding="14dp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="32dp" />

                <!-- ðŸŸ¥ Focus Points -->
                <TextView
                    android:id="@+id/focusPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Focus Points: 0"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="20dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- ðŸ”¹ SIDEBAR MENU -->
    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/menu_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_profile"
            android:drawablePadding="10dp"
            android:text="Profile"
            android:textSize="16sp"
            android:padding="12dp" />

        <TextView
            android:id="@+id/menu_rewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_rewards"
            android:drawablePadding="10dp"
            android:text="Rewards"
            android:textSize="16sp"
            android:padding="12dp" />

        <TextView
            android:id="@+id/menu_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_settings"
            android:drawablePadding="10dp"
            android:text="Settings"
            android:textSize="16sp"
            android:padding="12dp" />

        <TextView
            android:id="@+id/menu_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_contact"
            android:drawablePadding="10dp"
            android:text="Contact Us"
            android:textSize="16sp"
            android:padding="12dp" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
